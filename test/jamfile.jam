import boost ;

boost.use-project ;

path-constant build_folder
    : ./build
    ;

project
    : default-build debug
    : build-dir $(build_folder)
    : requirements <cxxflags>-std=c++1z
      <warnings>all
      <warnings-as-errors>on
    ;

build-project playground ;

path-constant install_folder
    : ./bin
    ;

install install_test_playground
    : playground//test_playground
    : <location>$(install_folder)
    ;
